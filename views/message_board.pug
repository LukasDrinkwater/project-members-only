extends layout 

block content 

  div(class="message-list")
    each message in message_list
      div(class="message-container")
      p #{message.user.fullName}: #{message.message} - #{message.createdAt}
      if admin 
        div(class="form-group")
          form(method="POST", action="")
            input(type="hidden", name="messageid", required="true", value=_id)
          button(type="submit") Delete message


  div(class="add-message")
    form(method="POST" action="")
      div(class="form-group")
        label( for="message") Message: 
        textarea(type="textarea" placeholder="Type message" name="message" required="true")
      button(type="submit") Post message
  
  if errors
    div(class="error-container")
      each error in errors 
        p #{error}